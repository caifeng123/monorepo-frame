{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "packages/**/*",
    "libs/**/*",
    "**/.eslintrc.cjs",
    "commitlint.config.cjs"
  ],
  "exclude": ["node_modules"]
}
